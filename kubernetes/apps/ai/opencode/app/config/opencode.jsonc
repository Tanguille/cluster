{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "cc-safety-net",
    "@tarquinen/opencode-dcp@latest",
    "oh-my-opencode-slim"
  ],
  "mcp": {
    "toolhive": {
      "type": "remote",
      "url": "{env:OPENCODE_MCP_URL}",
      "enabled": true
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://ollama.ai.svc.cluster.local:11434/v1",
        "apiKey": "{env:OLLAMA_API_KEY}"
      },
      "models": {
        "gpt-oss:latest": {
          "name": "GPT OSS 20b"
        }
      }
    },
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio",
      "options": {
        "baseURL": "http://192.168.0.26:1234/v1"
      }
    }
  }
}
