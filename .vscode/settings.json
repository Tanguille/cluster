{
  "editor.bracketPairColorization.enabled": true,
  "editor.tokenColorCustomizations": {
    "comments": "#7AB8CC",
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.line",
          "comment.block",
          "punctuation.definition.comment"
        ],
        "settings": {
          "foreground": "#7AB8CC",
          "fontStyle": "italic"
        }
      }
    ]
  },
  "files.associations": {
    "**/*.json5": "json5"
  },
  "files.trimTrailingWhitespace": true,
  "sops.defaults.ageKeyFile": "age.key",
  "vs-kubernetes": {
    "vs-kubernetes.kubeconfig": "/home/tanguille/cluster/kubeconfig",
    "vs-kubernetes.knownKubeconfigs": ["/home/tanguille/cluster/kubeconfig"]
  },
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": "./kubernetes/**/*.yaml"
  }
}
